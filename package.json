{
  "name": "mantle-renderer",
  "version": "1.0.1",
  "description": "A Minecraft-focused WebGL powered 3D renderer built for both the browser and server.",
  "main": "dist/index.js",
  "browser": {
    "./src/platformSpecifics/ServerPlatformUtils.js": "./src/platformSpecifics/ClientPlatformUtils.js"
  },
  "type": "module",
  "scripts": {
    "rimraf": "./node_modules/rimraf/bin.js",
    "clean": "npx rimraf dist/",
    "build": "npm run clean && npx tsc",
    "i": "npm install && npm --prefix dev-client install",
    "check": "npx tsc --noEmit",
    "package": "npm run build && npm publish",
    "pack": "npm run build && npm pack",
    "dev:client": "npm --prefix dev-client run dev",
    "dev:server": "npx ts-node ./dev-server/main.ts",
    "test:memory": "npx ts-node ./tests/memoryLeak/MemoryLeak.ts"
  },
  "keywords": [
    "Minecraft",
    "3d",
    "Renderer",
    "Three"
  ],
  "author": "eyezah, AuraSide",
  "license": "MIT",
  "devDependencies": {
    "@types/gl": "^6.0.2",
    "@types/three": "^0.152.0",
    "chalk": "^5.2.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "gl": "^6.0.2",
    "three": "^0.152.2"
  }
}
